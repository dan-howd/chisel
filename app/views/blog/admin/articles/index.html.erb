<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_articles.each do |admin_article| %>
      <tr>
        <td class='nowrap top-align'><%= render_timestamp(admin_article.created_at) %></td>
        <td><%= admin_article.title %></td>
        <td class='top-align'><%= link_to 'Show', article_path(admin_article) %></td>
        <td class='top-align'><%= link_to 'Edit', edit_admin_article_path(admin_article) %></td>
        <td class='top-align'><%= link_to 'Destroy', admin_article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @admin_articles %>

<%= link_to 'New Article', new_admin_article_path %>
