<h1>Recent Blog Entries</h1>
<ul class='list-group'>
<% @articles.each do |article| %>
  <li class='list-group-item article-list-item'>
    <h3 class='title'>
      <%= link_to article.title, article_path(article) %>
    </h3>
    <p class='timestamp'>
      <%= render_timestamp(article.created_at) %>
    </p>
  </li>
<% end %>
</ul>

<%= paginate @articles %>
