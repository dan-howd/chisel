<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td class='nowrap top-align'><%= render_timestamp(article.created_at) %></td>
        <td><%= article.title %></td>
        <td class='top-align'><%= link_to 'Show', article_path(article) %></td>
        <td class='top-align'><%= link_to 'Edit', edit_article_path(article) %></td>
        <td class='top-align'><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @articles %>

<%= link_to 'New Article', new_article_path %>
